{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "types": [
            "@types/node",
            "discord.js"
        ],
        "resolveJsonModule": true,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ES2021"
        ]
    },
    "include": [
        "./src"
    ]
}